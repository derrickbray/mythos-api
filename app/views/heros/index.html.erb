<p id="notice"><%= notice %></p>

<h1>Heros</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>House</th>
      <th>Spouse</th>
      <th>Parents</th>
      <th>Children</th>
      <th>Powers</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @heros.each do |hero| %>
      <tr>
        <td><%= hero.name %></td>
        <td><%= hero.house %></td>
        <td><%= hero.spouse %></td>
        <td><%= hero.parents %></td>
        <td><%= hero.children %></td>
        <td><%= hero.powers %></td>
        <td><%= hero.description %></td>
        <td><%= link_to 'Show', hero %></td>
        <td><%= link_to 'Edit', edit_hero_path(hero) %></td>
        <td><%= link_to 'Destroy', hero, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

