<h1 class="page-title">Gods Home</h1>
<p id="notice"><%= notice %></p>

<div class="container">
  <div class="center">
    <h1 class="top-link"><%= link_to 'Create a New God', new_god_path %></h1>
  </div>
</div>

<div class="container">

  <% @gods.each do |god| %>

    <div class="card">
      <div class="card__content">


        <h2 class="card__content-title"><%= god.name %></h2>
        <div class="card__content-sub"><%= god.house %></div>
        <div class="card__content-sub"><%= god.spouse %></div>
        <div class="card__content-sub"><%= god.parents %></div>
        <div class="card__content-sub"><%= god.children %></div>
        <div class="card__content-sub"><%= god.powers %></div>
        <td><%= god.description %></td>
        <td><%= link_to 'Show', god %></td>
        <td><%= link_to 'Edit', edit_god_path(god) %></td>
        <td><%= link_to 'Destroy', god, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </div>
    </div>
    <% end %>

  </div>
