<div class="nav">
    <div class="container">
        <div class="nav__content">
            <div class="nav__title">
                <%= link_to 'Mythos', root_path %>
            </div>
            <div class="nav__links">
                <span class="underline"><%= link_to 'Myths', myths_path(@myth) %></span>
                <%= link_to 'Gods', gods_path(@god) %>
                <%= link_to 'Heros', heros_path(@hero) %>
            </div>
        </div>
    </div>
</div>

<h1 class="page-title">Myths Home</h1>
<p id="notice"><%= notice %></p>

<div class="container">
    <div class="center">
      <h1 class="top-link"><%= link_to 'Create a New Myth', new_myth_path %></h1>
    </div>
</div>
<div class="container">
  <% @myths.each do |myth| %>
    <div class="card">
        <div class="card__content">
            <h2 class="card__content-title"><%= myth.title %></h2>
            <div class="card__content-sub">'<%= myth.subtitle %>'</div>
            <div class="card__content-author">By:
                <%= myth.author %></div>
            <div class="card__content-item"><%= myth.body %></div>
            <div class="button-box">
                <div class="button-box__btn"><%= link_to 'Edit', edit_myth_path(myth) %></div>
                <div class="button-box__btn"><%= link_to 'Delete', myth, method: :delete, data: { confirm: 'Are you sure?' } %></div>
            </div>
        </div>
    </div>
    <% end %>
</div>
